<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Index</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>

</head>
<body>
    <h1>Tell us about your favourite car!!!</h1>
    <form id="car-form-data" method="POST" action="">
        <label for="car-brand-input">Brand</label>
        <input id="car-brand-input" name="car-brand-input" type="text">
        <label for="car-model-input">Model</label>
        <input id="car-model-input" name="car-model-input" type="text">
        <label for="car-year-input">Year</label>
        <input id="car-year-input" name="car-year-input" type="date">
        <label for="car-colour-input">Colour</label>
        <input id="car-colour-input" name="car-colour-input" type="color">
    </form>
    <button id="submit-car-data">Submit</button>
    <div class="card-cont">
     <% carData.forEach(item =>{ %>
        <div class="car-data-card-cont">
        <p>Car Brand:   <%= item.brand %></p>
        <p>Car Model:   <%= item.model %></p>
        <p>Date of Model:   <%= item.date %></p>
        <div id="colour-patch" style="background-color:<%= item.colour %>" id="colour-patch"></div>
        <button data-mongoid="<%= item._id %>"" id="delete-post">Delete Post</button>
        </div>
     <%})%>
    </div>
    


</body>
<script type="text/javascript"  src="main.js"></script>
</html>